@model FootballApp.Models.Mecz

@{
    ViewData["Title"] = ViewData["MenuTitle"];
}

<h2>@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this match?</h3>
<div>
    <h4>Match Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            Date
        </dt>
        <dd class="col-sm-9">
            @Model.Data.ToString("yyyy-MM-dd HH:mm")
        </dd>
        <dt class="col-sm-3">
            Home Team
        </dt>
        <dd class="col-sm-9">
            @Model.DruzynaDomowa?.Nazwa
        </dd>
        <dt class="col-sm-3">
            Away Team
        </dt>
        <dd class="col-sm-9">
            @Model.DruzynaGości?.Nazwa
        </dd>
        <dt class="col-sm-3">
            Score
        </dt>
        <dd class="col-sm-9">
            @(Model.WynikDomowy.HasValue && Model.WynikGości.HasValue ? $"{Model.WynikDomowy} - {Model.WynikGości}" : "Upcoming")
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
    </form>
</div>