@model FootballApp.Models.Mecz

@{
    ViewData["Title"] = ViewData["MenuTitle"];
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>Match Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-3">
            Date
        </dt>
        <dd class="col-sm-9">
            @Model.Data.ToString("yyyy-MM-dd HH:mm")
        </dd>
        <dt class="col-sm-3">
            Home Team
        </dt>
        <dd class="col-sm-9">
            @Model.DruzynaDomowa?.Nazwa
        </dd>
        <dt class="col-sm-3">
            Away Team
        </dt>
        <dd class="col-sm-9">
            @Model.DruzynaGości?.Nazwa
        </dd>
        <dt class="col-sm-3">
            Score
        </dt>
        <dd class="col-sm-9">
            @(Model.WynikDomowy.HasValue && Model.WynikGości.HasValue ? $"{Model.WynikDomowy} - {Model.WynikGości}" : "Upcoming")
        </dd>
    </dl>
</div>
<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a> |
    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
</div>