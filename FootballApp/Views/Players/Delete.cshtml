@model FootballApp.Models.Zawodnik

@{
    ViewData["Title"] = "Delete Player";
}

<h2>@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this player?</h3>
<div>
    <h4>Zawodnik</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Imie)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Imie)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Nazwisko)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Nazwisko)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Pozycja)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Pozycja)
        </dd>
        <dt class="col-sm-3">
            Team
        </dt>
        <dd class="col-sm-9">
            @(Model.Druzyna?.Nazwa ?? "Free Agent")
        </dd>
    </dl>
    <p class="text-danger"><strong>Warning: Deleting this player will also delete all associated statistics. This action cannot be undone.</strong></p>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>