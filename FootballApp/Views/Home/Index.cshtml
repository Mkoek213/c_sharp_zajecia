@model List<FootballApp.Models.Druzyna>

@{
    ViewData["Title"] = "Teams";
}

<h2 class="mt-4">🏟 Teams List</h2>
<p class="text-muted">Browse all football teams in the league.</p>

<a asp-action="Create" class="btn btn-primary mb-3">➕ Add New Team</a>

<table class="table table-striped table-bordered mt-3">
    <thead class="table-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">City</th>
            <th scope="col">Team Name</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var team in Model)
    {
        <tr>
            <td>@team.Id</td>
            <td>@team.Miasto</td>
            <td>@team.Nazwa</td>
            <td>
                <a asp-action="Edit" asp-route-id="@team.Id" class="btn btn-sm btn-warning">✏️ Edit</a>
                <a asp-action="Delete" asp-route-id="@team.Id" class="btn btn-sm btn-danger">🗑 Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
